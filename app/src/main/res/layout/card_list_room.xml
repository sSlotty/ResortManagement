<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/idLb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/mitr"
                android:text="ID : "
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/roomidTxt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/roomidTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/mitr"
                android:text="--- ID ---"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/idLb"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/roomtypeLb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/mitr"
                android:text="Room Type : "
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/roomtypeTxt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idLb" />

            <TextView
                android:id="@+id/roomtypeTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/mitr"
                android:text="--- room type ---"
                app:layout_constraintEnd_toStartOf="@+id/btnDel"
                app:layout_constraintStart_toEndOf="@+id/roomtypeLb"
                app:layout_constraintTop_toBottomOf="@+id/roomidTxt" />

            <TextView
                android:id="@+id/personLB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/mitr"
                android:text="Person : "
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/personTxt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roomtypeTxt" />

            <TextView
                android:id="@+id/personTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/mitr"
                android:text="--- person ---"
                app:layout_constraintEnd_toStartOf="@+id/btnDel"
                app:layout_constraintStart_toEndOf="@+id/personLB"
                app:layout_constraintTop_toBottomOf="@+id/roomtypeTxt" />

            <TextView
                android:id="@+id/priceLB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/mitr"
                android:text="Price : "
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personLB" />


            <TextView
                android:id="@+id/priceTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/mitr"
                android:text="--- price ---"
                app:layout_constraintEnd_toStartOf="@+id/btnDel"
                app:layout_constraintStart_toEndOf="@+id/priceLB"
                app:layout_constraintTop_toBottomOf="@+id/personTxt" />

            <TextView
                android:id="@+id/statusLB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/mitr"
                android:text="Status : "
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/statusTxt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/priceLB" />


            <TextView
                android:id="@+id/statusTxt"
                android:layout_width="287dp"
                android:layout_height="21dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/mitr"
                android:text="--- status ---"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/statusLB"
                app:layout_constraintTop_toBottomOf="@+id/priceTxt"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/btnDel"
                android:layout_width="51dp"
                android:layout_height="63dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roomidTxt"
                app:srcCompat="@android:drawable/ic_delete" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
